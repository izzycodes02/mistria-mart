{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/styles": ["src/styles/*"],
      "@utils": ["./utils/*"],
      "@/icons/*": ["src/components/icons/*"],
      "@/common/*": ["src/components/ui/common/*"],
      "@/smallui/*": ["src/components/ui/smallUI/*"],
      "@/inputs": ["src/components/ui/smallUI/inputs"],
      "@/inputs/*": ["src/components/ui/smallUI/inputs/*"],
      "@/buttons/*": ["src/components/ui/smallUI/buttons/*"],
      "@/lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
